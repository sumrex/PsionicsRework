#####    Planet attachments    ######
@astroid_scale = 30

#Shroud planet 1

entity = {
	name = "shrouded_paradise_01_entity"
	pdxmesh = "planet_clouded_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "shroud_1_diffuse.dds"
	texture_normal = "savannah_01_normal.dds"
	texture_specular = "savannah_01_specular.dds"
	}

	##pole texture override
	meshsettings = {
	name = "polesShape"
	texture_diffuse = "poles_shroud_1_diffuse.dds"
	texture_normal = "poles_1_normal.dds"
	texture_specular = "poles_1_specular.dds"
	}
	
	##cloud texture override
	meshsettings = {
	name = "clouds_geosphereShape"
	texture_diffuse = "clouds_shroud_01_diffuse.dds"
	texture_normal = "clouds_medium_normal.dds"
	texture_specular = "clouds_medium_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
	name = "clouds_shadow_geosphereShape"
	texture_diffuse = "clouds_shroud_shadow_01_diffuse.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "nospec.dds"
	}

	default_state = "idle"
	state = { name = "idle" animation = "idle" 
		start_event = { trigger_once = yes sound = { soundeffect = "amb_toxic_world_a" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_toxic_world_b" } }
	}
}

